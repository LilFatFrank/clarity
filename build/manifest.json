{
  "manifest_version": 3,
  "name": "Vizor",
  "short_name": "Vizor",
  "version": "1.0.0",
  "description": "Understand transactions and get wallet insights in one click. Solana made simple.",
  "icons": {
    "16": "icons/vizor-icon-16.png",
    "32": "icons/vizor-icon-32.png",
    "48": "icons/vizor-icon-48.png",
    "128": "icons/vizor-icon-128.png"
  },
  "permissions": ["webNavigation", "tabs", "storage"],
  "host_permissions": ["https://*.solscan.io/*", "https://vizor-api.vercel.app/*"],
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["*://*.solscan.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vizor Wallet",
    "default_icon": {
      "16": "icons/vizor-icon-16.png",
      "32": "icons/vizor-icon-32.png",
      "48": "icons/vizor-icon-48.png",
      "128": "icons/vizor-icon-128.png"
    }
  }
}
